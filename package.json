{
    "name": "ts-workspace",
    "packageManager": "yarn@4.6.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dprint:init-config": "yarn workspaces foreach -Ap run init-dprint-config",
        "publish": "yarn workspaces foreach --from 'packages/*' -Rpt npm publish --access public --tolerate-republish",
        "build": "yarn workspaces foreach -Apt run build",
        "lint": "yarn workspaces foreach -Ap run lint",
        "fmt": "yarn workspaces foreach -Ap run fmt"
    },
    "workspaces": [
        "packages/*",
        "projects/*",
        "project-templates/*"
    ],
    "devDependencies": {
        "@cleansimple/dprint-config": "workspace:^",
        "@yarnpkg/types": "^4.0.1",
        "dprint": "0.50.2",
        "eslint": "9.39.1",
        "rollup": "4.52.4",
        "typescript": "5.9.3"
    }
}
